<!DOCTYPE html>
<html lang="es">
<%- include('./partials/head.ejs') %>
<body>
    <%- include('./partials/header.ejs') %>

    <main>
        
        <h1>LISTADO DE PELICULAS</h1>
        <ul>
            <% for(let i=0; i<peliculas.length; i++) { %>
            <li>
                <a href="/movies/<%= peliculas[i].id%>">
                    <%= peliculas[i].title %> 
                    <% if(peliculas[i].generos) { %> - <%= peliculas[i].generos.name %> 
                    <% }else{ %> - Sin genero <% } %>
                </a>
            </li>
            <% } %>
        </ul>

    </main>
    
    <%- include('./partials/footer.ejs') %>
</body>
</html>